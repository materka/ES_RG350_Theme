<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0.0 0.0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>13a856</color>
			<path>./../art/systemback.png</path>
		</image>
		
		<image name="logo">
			<path>./logo2.png</path>
        </image>
		
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
		
		<image name="bbackgroundLogo" extra="true">
			<tile>false</tile>
			<pos>0.0 0.0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>d2ccc9</color>
			<path>./../art/systemfront.png</path>
		</image>
		
		<image name="console_overlay" extra="true">
			<tile>false</tile>
			<pos>0.0 0.0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./console.png</path>
		</image>
		
	</view>

	<view name="system, detailed">
		
		<text name="logoText" extra="true">
			<text>Capcom Play System</text>
			<color>13a856</color>
		</text>
		
	</view>

	<view name="basic">

		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.5 0.103</pos>
			<maxSize>0.315 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<image name="background" extra="true">
